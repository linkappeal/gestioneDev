    $(function() {
        // Add class 'had-value-on-load' to inputs/selects with values.
        $(".sonata-filter-form input").add(".sonata-filter-form select").each(function(){
            if($(this).val()) {
                $(this).addClass('had-value-on-load');
            }
        });

        // REMOVE ALL EMPTY INPUT FROM FILTER FORM (except inputs, which has class 'had-value-on-load')
        $(".sonata-filter-form").submit(function() {
            $(".sonata-filter-form input").add(".sonata-filter-form select").each(function(){
                if(!$(this).val() && !$(this).hasClass('had-value-on-load')) {
                    $(this).remove()
                };
            });
        });
    });
    
        function goToExport(skip=0){
                                
            var export_page = '{{ admin.generateUrl('export', admin.modelmanager.paginationparameters(admin.datagrid, 0) + {'format' : 'csv', 'limit': 'tmp_limit', 'type':'tmp_type','max_lead':'tmp_max','save_url':'1'}) }}';
            export_page = export_page.replace('tmp_limit', $("#form_Numero_lead_da_estrarre").val());
            
            var lead_type = '';
            var user_choice = getMaxLeadEstraibili();
            max_lead_estraibili = user_choice.num;
            lead_type = user_choice.lead_type;
            //console.log("max_lead_estraibili", max_lead_estraibili);
            var lead_da_estrarre = $("#form_Numero_lead_da_estrarre").val();
            
            if (((lead_da_estrarre <= max_lead_estraibili) && (max_lead_estraibili != 0)) || skip){
                export_page = export_page.replace('tmp_type', lead_type);
                export_page = export_page.replace('tmp_max', max_lead_estraibili);
                export_page = export_page.replace(/&amp;/g, '&');
                location.href = export_page;
            } 
            else {
                    var url = "{{ admin.generateUrl('warningleads', {'max_lead': 'tmp_lead'})}}";
                    //console.log("max_lead_estraibili", url);
                    url = url.replace("tmp_lead", max_lead_estraibili); 
                    //console.log("max_lead_estraibili", url);
                   
                    //Per pulire il contenuto della finestra modale
                    $("#myModal").on('hidden.bs.modal', function () {
                        $(this).data('bs.modal', null);
                    });
    
                    $('#myModal').modal({
                        show: true,
                        remote: url
                    });           
            }
    
        }
        
