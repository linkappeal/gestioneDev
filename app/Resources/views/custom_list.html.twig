        function getMaxLeadEstraibili(){
        
            var max_lead_estraibili = {};
            if ($('#check_today').length > 0){
                if ($('#check_today').is(':checked') ||
                    (($('#check_today_fisso').is(':checked')) &&  $('#check_today_mobile').is(':checked')) ||
                    (!($('#check_today').is(':checked')) && !($('#check_today_fisso').is(':checked')) &&  !($('#check_today_mobile').is(':checked')))) 
                        {
                            max_lead_estraibili.lead_type = 0;
                           {% if admin.getcounters.oggi.totali is defined %} max_lead_estraibili.num = {{admin.getcounters.oggi.totali}} {% else %} max_lead_estraibili.num = 0 {% endif %};
                        }
                else if ($('#check_today_fisso').is(':checked')) {
                            max_lead_estraibili.lead_type = 1;
                           {% if admin.getcounters.oggi.fisso is defined %} max_lead_estraibili.num = {{admin.getcounters.oggi.fisso}} {% else %} max_lead_estraibili.num = 0 {% endif %};
                        }
                else if ($('#check_today_mobile').is(':checked')) {
                            max_lead_estraibili.lead_type = 2;
                           {% if admin.getcounters.oggi.cellulare is defined %} max_lead_estraibili.num = {{admin.getcounters.oggi.cellulare}} {% else %} max_lead_estraibili.num = 0 {% endif %};
                        }
            }
            else  {% if admin.getcounters.totali is defined %} max_lead_estraibili.num = {{admin.getcounters.totali}} {% else %} {max_lead_estraibili.num = 0;max_lead_estraibili.lead_type = 0;} {% endif %}; 

